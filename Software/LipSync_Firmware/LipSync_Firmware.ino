        {
          // Scroll: Perform mouse scroll action using mouse middle button
          // Default: if sip counter value is under 750 and more than SIP_COUNT_THRESHOLD_MED ( 3 Second Long Sip )
          cursorSecondaryScroll (); // Enter Scroll mode
          delay(5);
          break;
        }
    */

    }// end switch
  }
}

