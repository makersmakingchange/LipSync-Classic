void getCompFactor(void) {

  int compFactorIsSet;
  float defaultCompFactor = CURSOR_DEFAULT_COMP_FACTOR;

  EEPROM.get(EEPROM_defaultIsSet, compFactorIsSet);
  delay(10);

  if (compFactorIsSet == 1) {
